{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": [
            "**/tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-html",
        "deprecation"
    ],
    "rules": {
        "deprecation/deprecation": "warn"
    }
}
