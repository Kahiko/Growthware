{
    // Use IntelliSense to find out which attributes exist for C# debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "Database Manager",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "DB_Manager_Build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/DatabaseManager/bin/Debug/net8.0/GrowthWare.DatabaseManager.dll",
            "args": [
                "--Version",
                "4.0.0.0"
            ],
            "cwd": "${workspaceFolder}/DatabaseManager",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "PWA Chrome",
            // For .net 6.0 + this port needs to match Properties\launchSettings.json:applicationUrl
            // otherwise the SPA will not launch
            "url": "https://localhost:44455",
            "webRoot": "${workspaceFolder}/Web.Angular",
            "sourceMaps": true,
            // "trace": true,
            "sourceMapPathOverrides": {
              "webpack:///./*": "${webRoot}/*"
            }
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "PWA Edge",
            // For .net 6.0 + this port needs to match Properties\launchSettings.json:applicationUrl
            // otherwise the SPA will not launch
            "url": "https://localhost:44455",
            "webRoot": "${workspaceFolder}/Web.Angular",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
              "webpack:///./*": "${webRoot}/*"
            }
        },
        {
            "command": "npm start",
            "name": "Start NodeJS",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/Web.Angular",
        },
        {
            "name": "Web.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Web.Api-Build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Web.Api/bin/Debug/net8.0/GrowthWare.Web.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Web.Api",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": false
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Web.Angular"
            }
        }
    ],
    "compounds": [
        {
            "name": "1.) API + Chrome",
            "configurations": ["Web.Api", "Start NodeJS", "PWA Chrome"]
        },
        {
            "name": "2.) API + Edge",
            "configurations": ["Web.Api", "Start NodeJS", "PWA Edge"]
        }       
    ]
}